<svg width="600" height="120" viewBox="0 0 600 120" fill="none" xmlns="http://www.w3.org/2000/svg">
  <!-- Background -->
  <rect width="600" height="120" fill="white"/>

  <!-- 3 Days Exchange Policy Badge -->
  <g>
    <!-- Badge background -->
    <rect x="20" y="20" width="160" height="80" rx="8" fill="#F9FAFB" stroke="#E5E7EB" stroke-width="1"/>

    <!-- Exchange icon -->
    <circle cx="100" cy="40" r="12" fill="#059669"/>
    <path d="M95 40 L100 35 L105 40 L100 45 Z" fill="white"/>
    <path d="M100 35 L100 45" stroke="white" stroke-width="2" stroke-linecap="round"/>

    <!-- Text -->
    <text x="100" y="65" text-anchor="middle" fill="#374151" font-family="Arial, sans-serif" font-size="14" font-weight="600">3 Days Exchange</text>
    <text x="100" y="80" text-anchor="middle" fill="#6B7280" font-family="Arial, sans-serif" font-size="11">Policy</text>
  </g>

  <!-- Made in India Badge -->
  <g>
    <!-- Badge background -->
    <rect x="220" y="20" width="160" height="80" rx="8" fill="#F9FAFB" stroke="#E5E7EB" stroke-width="1"/>

    <!-- India flag icon -->
    <rect x="90" y="30" width="20" height="6" fill="#FF9933"/>
    <rect x="90" y="36" width="20" height="6" fill="white"/>
    <rect x="90" y="42" width="20" height="6" fill="#138808"/>
    <circle cx="100" cy="39" r="2" fill="#000080"/>

    <!-- Text -->
    <text x="100" y="65" text-anchor="middle" fill="#374151" font-family="Arial, sans-serif" font-size="14" font-weight="600">Made in India</text>
    <text x="100" y="80" text-anchor="middle" fill="#6B7280" font-family="Arial, sans-serif" font-size="11">Quality assured</text>
  </g>

  <!-- Free Delivery Badge -->
  <g>
    <!-- Badge background -->
    <rect x="420" y="20" width="160" height="80" rx="8" fill="#F9FAFB" stroke="#E5E7EB" stroke-width="1"/>

    <!-- Delivery truck icon -->
    <rect x="85" y="35" width="30" height="12" rx="2" fill="#059669"/>
    <circle cx="90" cy="50" r="3" fill="#059669"/>
    <circle cx="110" cy="50" r="3" fill="#059669"/>
    <rect x="95" y="30" width="8" height="4" fill="white"/>
    <path d="M100 30 L100 34 L102 32 Z" fill="#059669"/>

    <!-- Text -->
    <text x="100" y="65" text-anchor="middle" fill="#374151" font-family="Arial, sans-serif" font-size="14" font-weight="600">Free Delivery</text>
    <text x="100" y="80" text-anchor="middle" fill="#6B7280" font-family="Arial, sans-serif" font-size="11">Within 5-7 days</text>
  </g>
</svg>
